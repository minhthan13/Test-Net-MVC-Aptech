@{
  Layout = "~/Areas/_Layout.cshtml";
}

@using TestNetMVC.Models
@model List<Request>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h2 class="card-title"><b>Requests</b></h2>

        <div class="card-tools d-flex ">
          <div class="modal-add-request mr-2">
            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#AddNewRequest">
              Add New Requests
            </button>
            <partial name="_AddNewRequestModal" />

          </div>
          <div class="input-group input-group-sm align-content-center" style="width: 150px;">
            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
            <div class="input-group-append">
              <button type="submit" class="btn btn-default">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
      <!-- /.card-header -->
      <div class="card-body table-responsive p-0" style="height: 300px;">
        <table class="table table-bordered table-hover table-head-fixed text-nowrap text-center">
          <thead>
            <tr>
              <th>#</th>
              <th>Title</th>
              <th>Sent Date</th>
              <th>Priority</th>
              <th>Handle</th>
              <th>Submit</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
            @{
              int i = 1;
            }
            @foreach (var r in Model)
            {
              <tr>
                <td>@(i++)
                </td>
                <td>@r.Title</td>

                <td>@r.SentDate.ToString("dd-MM-yyyy")</td>
                <td>@r.Priority.PriorityName</td>
                <td>@(r.EmployeeIdHandlingNavigation != null ? r.EmployeeIdHandlingNavigation.Username : "none")</td>
                <td>@r.EmployeeIdSubmitNavigation.Username</td>
                <td>@r.Description</td>
              </tr>
            }



          </tbody>
        </table>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
</div>